<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".DoctorsLoginPage">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/inter_medium"
            android:text="Sign In"
            android:layout_marginTop="32dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/inter_medium"
            android:text="Sign in your account"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/DoctorsID"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/email"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Doctor ID"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/doctorsPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_border"
            android:drawableStart="@drawable/lock_icon"
            android:drawablePadding="10dp"
            android:fontFamily="@font/inter_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="14dp"
            android:textSize="16sp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp">

            <CheckBox
                android:id="@+id/Remember_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/inter_regular"
                android:text="Remember me"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/forgot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/inter_regular"
                android:gravity="center"
                android:text="Forgot Password?"
                android:textColor="@color/pg_color"
                android:textSize="14sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/signinuser"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_button"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:padding="10dp"
            android:text="Sign In"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Already Have An Account? "
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gotoSignupPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Sign Up"
                android:textColor="@color/pg_color"
                android:textFontWeight="700"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>